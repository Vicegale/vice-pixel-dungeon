    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch DesktopLauncher",
            "request": "launch",
            "mainClass": "com.shatteredpixel.shatteredpixeldungeon.desktop.DesktopLauncher",
            "projectName": "desktop"
        },
        {
            "type": "java",
            "name": "Launch IOSLauncher",
            "request": "launch",
            "mainClass": "com.shatteredpixel.shatteredpixeldungeon.ios.IOSLauncher",
            "projectName": "ios"
        },
        {
            "type": "java",
            "name": "Attach remotely",
            "request": "attach",
            "projectName": "desktop",
            "hostName": "localhost",
            "port": "5005"
        }
    ]
}